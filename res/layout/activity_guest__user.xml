<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/back2"
    android:orientation="horizontal"
   
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.guestuser.MainActivity" >

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/img1"
                android:layout_width="69dp"
                android:layout_height="69dp"
                android:background="@drawable/contactus_guest"
                android:paddingTop="20dp" />

            <TextView
                android:id="@+id/txt1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Contact Us"
                android:textSize="15dp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/img2"
                android:layout_width="72dp"
                android:layout_height="98dp"
                android:paddingTop="30dp"
                android:src="@drawable/aboutus_guest" />

            <TextView
                android:id="@+id/txt2"
                android:layout_width="89dp"
                android:layout_height="wrap_content"
                android:text="About Us"
                android:textSize="15dp"
                android:textStyle="bold" >
            </TextView>

            <ImageView
                android:id="@+id/img3"
                android:layout_width="match_parent"
                android:layout_height="103dp"
                android:paddingTop="30dp"
                android:src="@drawable/photogallery_guest" />

            <TextView
                android:id="@+id/txt3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Photo Gallery"
                android:textSize="15dp"
                android:textStyle="bold" >
            </TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:orientation="vertical"
            android:paddingLeft="60dp" >

            <ImageView
                android:id="@+id/img4"
                android:layout_width="69dp"
                android:layout_height="69dp"
                android:background="@drawable/applicationform_guest"
                android:paddingTop="20dp" >
            </ImageView>

            <TextView
                android:id="@+id/txt4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:text="Admission"
                android:textSize="15dp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/img5"
                android:layout_width="72dp"
                android:layout_height="98dp"
                android:paddingTop="30dp"
                android:src="@drawable/courses_guest" />

            <TextView
                android:id="@+id/txt5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:text="Courses"
                android:textSize="15dp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

   

</RelativeLayout>
